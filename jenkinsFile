pipeline {
    agent any
    stages {
        stage('Playwright Install') {
            steps {
                bat '''
                npm install
                '''
            }
        }
        stage('Running Tests') {
            steps {
                bat "npx cross-env ENV=prod npx playwright test -g '@$env.TEST_CATEGORY' --reporter=line,allure-playwright"
            }
        }
        stage('reports') {
        steps {
        script {
            allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'target/allure-results']]
            ])
        }
    }
}
    }
    post('Publish Report') {
        always {
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'playwright-report',
                    reportFiles: 'index.html',
                    reportName: 'Playwright Report',
                    reportTitles: ''
                ])
                echo 'Publishing Report' 
        }
    }
}